<div class="card mb-4">
    {###### IMAGE ######}
    {% if property.picture %}
        {# vich_uploader_asset(l'entité, le champ dans l'entité) #}
        <img src="{{ vich_uploader_asset(property.picture , 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height: auto;">
    {% else %}
        <img src="{{ '/images/empty.png' | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height: auto;">
    {% endif %}

    {###### BODY ######}
    <div class="card-body">
        {###### BODY > TITRE ######}
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        {###### BODY > TEXTE ######}
        {# <p class="card-text">{{ property.description | nl2br }}</p>#}
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }}</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>


